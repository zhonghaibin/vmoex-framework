{% set tabs = tabsWidget() %}

<div class="panel panel-default">
    <div class="panel-heading">
        <b><i class="fa fa-support"></i> {{ '推荐主题'|trans }}</b>
    </div>
    <div class="panel-body">
        <ul style="list-style: none;float: left;padding: 0;margin: 0">
            {% for tab in tabs %}
                <li style="display: inline-block;margin-right: 10px;margin-bottom: 10px;border: 1px solid #e3e3e3;padding: 2px 6px;border-radius: 4px;">
                    <a data-pjax href="{{ path('post_list', {tab: tab.alias}) }}" style="text-decoration: none;">
                        {{ tab.name|trans  }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
