{% extends "@YesknMain/base.html.twig" %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    {{ 'register'|trans }}{{ 'site_name'|trans }}
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            {% include 'flash_messages.html.twig' %}
                            {{ form_start(form) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                            <div class="form-group">
                                {{ form_widget(form.submit, {'attr': {'class': 'btn-default btn'}}) }}
                            </div>
                            <div>
                                <span>已有帐号？</span>
                                <span><a data-pjax href="{{ path('login') }}">直接登录</a></span>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include '@YesknMain/sidebar-login.html.twig' %}
{% endblock %}